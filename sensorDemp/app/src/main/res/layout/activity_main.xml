<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.houqixuan.sensordemp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidity"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="121dp"
        android:layout_marginTop="11dp"
        android:text="TextView" />

    <TextView
        android:text="Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_alignBaseline="@+id/humidity"
        android:layout_alignBottom="@+id/humidity"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView3"
        android:id="@+id/h_label" />

    <TextView
        android:text="temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_label"
        android:layout_alignStart="@+id/h_label"
        android:layout_marginTop="38dp"
        android:id="@+id/t_label" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t_label"
        android:layout_alignStart="@+id/humidity"
        android:id="@+id/temperature" />

    <TextView
        android:text="pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_label"
        android:layout_alignEnd="@+id/h_label"
        android:layout_marginTop="39dp"
        android:id="@+id/p_label" />

    <TextView
        android:text="light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_label"
        android:layout_alignStart="@+id/p_label"
        android:layout_marginTop="41dp"
        android:id="@+id/l_label" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/l_label"
        android:layout_alignStart="@+id/pressure"
        android:id="@+id/light" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressure"
        android:layout_alignBaseline="@+id/p_label"
        android:layout_alignBottom="@+id/p_label"
        android:layout_alignStart="@+id/temperature" />

    <Button
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light"
        android:layout_toStartOf="@+id/light"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="74dp"
        android:id="@+id/map"
        android:onClick="openMap" />

    <TextView
        android:text="date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_label"
        android:layout_alignStart="@+id/l_label"
        android:layout_marginTop="37dp"
        android:id="@+id/d_label" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/d_label"
        android:layout_alignStart="@+id/light"
        android:id="@+id/date" />

</RelativeLayout>
